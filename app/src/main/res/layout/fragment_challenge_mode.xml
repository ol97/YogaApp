<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengeModeFragment">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:background="@color/black"
        android:elevation="1dp"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewFPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:padding="8dp"
            android:text="Time Per Frame:" />

        <TextView
            android:id="@+id/textViewPose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:padding="8dp"
            android:text="Pose:" />

        <TextView
            android:id="@+id/textViewPoseConfidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:padding="8dp"
            android:text="Confidence:" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:elevation="1dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtonSwitchCamera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:layout_weight="0"
            android:padding="16dp"
            android:src="@drawable/ic_baseline_flip_camera_ios_24" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:elevation="1dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="Next" />

        <ImageButton
            android:id="@+id/imageButtonSettings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elevation="1dp"
            android:layout_weight="0"
            android:padding="16dp"
            android:src="@drawable/ic_baseline_settings_24" />

    </LinearLayout>
</RelativeLayout>